{
  "name": "my-vue-app",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "main": "dist-electron/main.js",
  "author": "Katon",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "electron": "tsc -p tsconfig.electron.json && electron dist-electron/main.js",
    "release": "standard-version",
    "electron-build": "tsc -p tsconfig.electron.json && electron-builder --publish always",
    "lint": "eslint .",
    "preview": "vite preview"
  },
  "dependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.22.0",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@vitejs/plugin-react": "^4.3.4",
    "electron": "^35.1.5",
    "electron-builder": "^26.0.12",
    "eslint": "^9.22.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "standard-version": "^9.5.0",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.26.1",
    "vite": "^6.3.0"
  },
  "build": {
    "appId": "com.example.viteelectron",
    "productName": "MyApp",
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "directories": {
      "output": "public"
    },
    "mac": {
      "identity": null,
      "target": ["dmg", "zip"]
    },
    "win": {
      "target": ["nsis", "zip"]
    },
    "linux": {
      "target": ["AppImage", "deb"]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "menuCategory": true
    },
    "publish": [
      {
        "provider": "github",
        "releaseType": "draft"
      }
    ]
  }
}
